- model_class = Review
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:user) + ':'
  %br
  = @review.user.name
%p
  %strong= model_class.human_attribute_name(:book) + ':'
  %br
  = @review.book.title
%p
  %strong= model_class.human_attribute_name(:rate) + ':'
  %br
  - @review.rate.times do
    %i{:class => "icon-star"}

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_reviews_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_review_path(@review), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_review_path(@review), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
